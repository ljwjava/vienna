<?xml version="1.0" encoding="UTF-8" ?>
<declare>
	<product
		id="HUA00003"
		corporation_id="hualife"
		code="12030"
		name="聚宝盆养老年金保险"
		name_abbr="聚宝盆"
		unit="1000"
		is_main="no"
		is_rider="yes"
		type_code="annuity"
		sequence="1000"
		input="premium"
		quantity="PREMIUM/UNIT"
		amount="QUANTITY*DS.RATE[0][0]"
		sale_begin_date="2015-01-01"
		sale_end_date=""
		last_modify_date="2017-01-01">

		<data>
			<item parser="dds" value="HUA00003" />
		</data>

		<param>
			<pay>
				<item code="single"/>
				<item code="term_5"/>
				<item code="term_10"/>
			</pay>
			<insure>
				<item code="full_105"/>
			</insure>
			<draw_age>
				<item code="60"/>
				<item code="65"/>
				<item code="70"/>
				<item code="75"/>
			</draw_age>
		</param>

		<init>
		</init>

		<interest>
			<item name="DRAW" param="A1">AGE+A1>=DRAW_AGE_VALUE?AMOUNT:0</item>
			<item name="CV" param="A1" formula="DS.CSV[A1][0]*AMOUNT/UNIT"/>
			<!--<item name="AMT" param="A1" formula="max(IT.CSV(A1),PremiumSum(A1))"/>-->
			<item name="SUV_T" param="A1" formula="IT.CV(A1)"/>
			<item name="DIE_T" param="A1" formula="max(IT.CV(A1),PremiumSum(A1))"/>
		</interest>

		<attachment>
			<benefit_table filter="table" parser="table">
				<table>
					<row type="title">
						<blank row="1">'保单年度末'</blank>
						<blank row="1">'年龄'</blank>
						<blank row="1">'年交保险费'</blank>
						<blank row="1">'累计保险费'</blank>
						<blank row="1">'领取'</blank>
						<blank row="1">'生存总利益'</blank>
						<blank row="1">'身故总利益'</blank>
						<blank row="1">'现金价值'</blank>
					</row>
					<loop from="0" to="INSURE_PERIOD-1" step="1" name="I">
						<row>
							<blank style="##0">I+1</blank>
							<blank style="##0">AGE+I+1</blank>
							<blank align="right" style="########0.00">PremiumYear(I)</blank>
							<blank align="right" style="########0.00">PremiumSum(I)</blank>
							<blank align="right" style="########0.00">IT.DRAW(I)</blank>
							<blank align="right" style="########0.00">IT.SUV_T(I)</blank>
							<blank align="right" style="########0.00">IT.DIE_T(I)</blank>
							<blank align="right" style="########0.00">IT.CV(I)</blank>
						</row>
					</loop>
				</table>
			</benefit_table>

			<coverage filter="coverage" parser="coverage">
			</coverage>
		</attachment>

		<rule>
			<if condition="DAY lt 28 or AGE > 60" type="customer">
				投保年龄：出生满 28 天-60 周岁。
			</if>
			<if condition="100000 > PARENT.PREMIUM * PARENT.PAY_PERIOD">
				福临门吉祥版年缴保费×缴费年期≥10万方可搭配聚宝盆
			</if>
		</rule>
	</product>
</declare>
