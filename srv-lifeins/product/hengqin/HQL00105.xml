			</insure>
			<draw_age>
				<item code="60" />
				<item code="65" />
			</draw_age>
		</param>
		<init>
			<item name="RATEVALUE">
		        var total = 0;
				if(null != DRAW_AGE_VALUE){
					if(DRAW_AGE_VALUE == 60)
						total = DS.RATE[0][0];
					else if(DRAW_AGE_VALUE == 65)
						total = DS.RATE[0][1];
				}
		        return total;
			</item>	
			<!--获取万能险信息-->
			<item name="WN">
				var ppp = PLAN.PRODUCTS;
				for(var i=0;i lt size(ppp);i++) {
					var c = ppp[i];
					if(c.PRODUCT_ID == 'HQL00106'){
						return c;
					}
				}
				return null;
			</item>
			<!-- 是否多主险销售 -->
			<item name="ISMULTI">true</item>
			<!-- 是否转入万能账户 -->
			<item name="TURNTOPOWERFUL">true</item>
