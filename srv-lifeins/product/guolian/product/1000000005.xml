         				 money[2] = IT.TEST(j,2) - get_Draw_Money(j);
							if (money[0] < 500) {
								save("RULER3",1);
								save("sawYear",j);
								save("money",money[0]);
							}else if(money[1] < 500){
								save("RULER3",1);
								save("money",money[1]);
								save("sawYear",j);
							}else if(money[2] < 500){
								save("RULER3",1);
								save("money",money[2]);
								save("sawYear",j);
							}
         	 	}
    	 	}
		}
        }
        var get_Draw_Money = function(year){ 
      	   var money=0;
           for(var i=0 ; i <= year ; i++){
              money = money*1.03 + getValue(i);
           }
           return money;
       }
       
     var getDrawPremiun =function(){
    	 if (saw_year1 != null) {
     		for(var i = 0; i < size(saw_year1); i++){
          	for(var j = saw_year1[i]-1;j <saw_year2[i];j++){
          	    if(j >= 0){
          	   		 saw_f[j]=draw_f[i]+saw_f[j];
          	    }else{
          	    	save("RULER4",1);
          	    }
         	 }
    	 	}
    	 }
    } 	 
        var calculate = function() {
          		getDrawPremiun();
          		RULER2();
                for(var i=0;i<total;i++){
          		     RULER1(i);
          		}
          		RULER3();
       	   }
          calculate();
          save("SAW_F",saw_f);
          save("SAW_S",saw_s);
		    ]]>
