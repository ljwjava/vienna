		input="amount" 
		unit_amount="1000"
		premium="AMOUNT*DS.RATE[0,0]/1000" 
		is_main="yes" 
		is_rider="no"
		sale_begin_date="2011-12-01" 
		sale_end_date="2099-01-01"
		last_modify_date="2011-12-01">
