<?xml version="1.0" encoding="UTF-8" ?>
<declare>
	<product
		id="FSH00001"
		corporation_id="fosun"
		code="110025"
		name="康乐e生重大疾病保险（C款）"
		name_abbr="康乐e生重疾"
		unit="1000"
		type_code="thunder"
		sequence="1000"
		sale_begin_date="2017-01-01"
		sale_end_date=""
		input="amount"
		last_modify_date="2017-01-01">

		<data>
			<item parser="dds" value="FSH00001" />
		</data>

		<param>
			<pay>
				<item code="term_5" />
				<item code="term_10" />
				<item code="term_15" />
				<item code="term_20" />
				<item code="term_30" />
			</pay>
			<insure>
				<item code="to_70" />
				<item code="to_80" />
				<item code="full_105" />
			</insure>
		</param>

		<input>
			<item name="AMOUNT" label="保额" widget="select" type="integer">[[100000,'10万'],[200000,'20万'],[300000,'30万'],[400000,'40万'],[500000,'50万']]</item>
			<item name="PAY" label="缴费年期" widget="select">[['term_5','5年交'],['term_10','10年交'],['term_15','15年交'],['term_20','20年交'],['term_20','30年交']]</item>
			<item name="INSURE" label="保障期间" widget="select">[['to_70','保至70岁'],['to_80','保至80岁'],['full_105','保终身']]</item>
		</input>

		<init>
			<item name="OTHER">return {PLAN_CODE: "JH11002401", PRODUCT_CODE: "110024"}</item>
		</init>

		<interest>
			<item name="CSV" param="A1" formula="DS.CSV[0][A1]*QUANTITY"/>
		</interest>

		<duty>
			<item name="110323" code="110251" premium="PREMIUM">AMOUNT</item>
		</duty>

		<attachment>
			<fgraph filter="fgraph" parser="fgraph">
				<item name="THUNDER">AMOUNT</item>
				<item name="MILD">AMOUNT</item>
			</fgraph>

			<benefit_chart filter="chart" parser="chart">
				<chart from="0" to="INSURE_PERIOD-1" name="I">
					<bar name="保费" color="#00AA00">PremiumYear(I)</bar>
					<line name="累计保费" color="#0000FF">PremiumSum(I)</line>
					<line name="现金价值" color="#0000FF">IT.CSV(I)</line>
				</chart>
			</benefit_chart>
		</attachment>

		<rule>
			<if condition="DAY lt 30 or AGE > 55" type="customer">
				投保年龄须为出生满30天~55周岁
			</if>
			<if condition="AGE > 40 and INSURE_VALUE == 70">
				41周岁≤被保险人年龄≤55周岁可选择：保至80周岁、终身
			</if>
			<if condition="AGE + PAY_PERIOD >= 70">
				缴费期间+投保年龄要求小于70周岁
			</if>
			<if condition="DAY >= 30 and 17 >= AGE and AMOUNT > 300000">
				30天-17岁保额不得超过30万
			</if>
			<if condition="AGE >= 18 and 40 >= AGE and AMOUNT > 500000">
				18-40岁保额不得超过50万
			</if>
			<if condition="AGE >= 41 and 45 >= AGE and AMOUNT > 400000">
				41-45岁保额不得超过40万
			</if>
			<if condition="AGE >= 46 and 50 >= AGE and AMOUNT > 300000">
				46-50岁保额不得超过30万
			</if>
		</rule>
	</product>
</declare>
